{{#if admin}}
  {{#each messages}}
    <h1>{{this.title}}</h1>
    <h2>{{this.message}}</h2>
    <h3>{{this.timestamp}}</h3>
    {{#each this.user}}
      <h2>{{this.username}}</h2>
    {{/each}}
    <a href="{{this.delete}}">Delete</a>
  {{/each}}

{{else}}
  {{#if member}}
    {{#each messages}}
      <h1>{{this.title}}</h1>
      <h2>{{this.message}}</h2>
      <h3>{{this.timestamp}}</h3>
      {{#each this.user}}
        <h2>{{this.username}}</h2>
      {{/each}}
    {{/each}}
  {{else}}
    {{#each messages}}
      <h1>{{this.title}}</h1>
      <h2>{{this.message}}</h2>
    {{/each}}
  {{/if}}
{{/if}}