<div
  class="container-fluid flex-column d-flex justify-content-center h-75 align-items-center"
>
  <h1>Sign Up</h1>
  <form class="card p-3 bg-light" action="" method="POST">
    <div class="mb-3">
      <label class="form-label" for="username">Username</label>
      <input class="form-control" name="username" type="text" />
      <label for="password" class="form-label">Password</label>
      <input class="form-control" name="password" type="password" />
      <label for="confirmpassword" class="form-label">Password</label>
      <input class="form-control" name="confirmpassword" type="password" />

      <h4>Choose your avatar</h4>
      <div class="form-check form-check-inline">
        <input
          class="form-check-input"
          type="radio"
          name="avatar"
          id="happy-clown"
          value="happy"
          checked
        />
        <label class="form-check-label" for="happy-clown"><img
            src="./images/happy-clown.png"
            alt="happy-clown"
          /></label>
      </div>
      <div class="form-check form-check-inline">
        <input
          class="form-check-input"
          type="radio"
          name="avatar"
          id="hat-clown"
          value="hat"
        />
        <label class="form-check-label" for="hat-clown"><img
            src="./images/hat-clown.png"
            alt="happy-clown"
          /></label>
      </div>
      <div class="form-check form-check-inline">
        <input
          class="form-check-input"
          type="radio"
          name="avatar"
          id="bald-clown"
          value="bald"
        />
        <label class="form-check-label" for="bald-clown"><img
            src="./images/bald-clown.png"
            alt="bald-clown"
          /></label>
      </div>
      <div class="form-check form-check-inline">
        <input
          class="form-check-input"
          type="radio"
          name="avatar"
          id="evil-clown"
          value="evil"
        />
        <label class="form-check-label" for="evil-clown"><img
            src="./images/evil-clown.png"
            alt="evil-clown"
          /></label>
      </div>
      <div class="form-check form-check-inline">
        <input
          class="form-check-input"
          type="radio"
          name="avatar"
          id="ballon"
          value="ballon"
        />
        <label class="form-check-label" for="inlineRadio3"><img
            src="./images/ballon-clown.png"
            alt="ballon-clown"
          /></label>
      </div>

    </div>
    <h5>{{error}}</h5>
    <button type="submit" class="btn btn-primary">Sign Up</button>
  </form>

</div>